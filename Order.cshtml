
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml"; // Hoặc _LayoutAdmin nếu bạn có
}

<h3 class="text-center text-primary">QUẢN LÝ ĐƠN HÀNG</h3>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Mã đơn</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaKH</td>
                    <td>@item.HoTen</td> <!-- Nếu có liên kết với KhachHang -->
                    <td>@String.Format("{0:dd/MM/yyyy}", item.NgayDH)</td>
                    @*<td>@String.Format("{0:N0}", item.TongTien) VNĐ</td>
                     <td>@item.TrangThai</t*@
                    
                </tr>
            }
        </tbody>
    </table>
</div>
