@model IEnumerable<Lab04.Models.Sach>

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml"; // hoặc _LayoutAdmin nếu có
}

<h3 class="text-center text-primary">QUẢN LÝ SẢN PHẨM</h3>

<div class="container">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Mã</th>
                <th>Tên sách</th>
                <th>Giá</th>
                <th>Hình ảnh</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSach</td>
                    <td>@item.TenSach</td>
                    <td>@String.Format("{0:N0}", item.DonGia) VNĐ</td>
                    <td><img src="@Url.Content(item.Hinh)" style="width: 80px;" /></td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning">Sửa</a>
                        <a href="#" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
