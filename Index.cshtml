@model IEnumerable<Lab04.Models.ChiTietDonDatHang>

@{
    ViewBag.Title = "Danh sách Chi tiết Đơn đặt hàng";
}

<h2>Danh sách Chi tiết Đơn đặt hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>

<table border="1" cellpadding="5">
    <tr>
        <th>SoDH</th>
        <th>MaSach</th>
        <th>SoLuong</th>
        <th>DonGia</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SoDH</td>
            <td>@item.MaSach</td>
            <td>@item.SoLuong</td>
            <td>@item.DonGia</td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { soDH = item.SoDH, maSach = item.MaSach }) |
                @Html.ActionLink("Sửa", "Edit", new { soDH = item.SoDH, maSach = item.MaSach }) |
                @Html.ActionLink("Xóa", "Delete", new { soDH = item.SoDH, maSach = item.MaSach })
            </td>
        </tr>
    }
</table>
